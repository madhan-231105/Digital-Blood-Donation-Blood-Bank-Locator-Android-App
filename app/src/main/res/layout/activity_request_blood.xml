<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <TextView
        android:id="@+id/tvReqTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Request Blood"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#D32F2F"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/etReqPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Contact Phone Number"
        android:inputType="phone"
        app:layout_constraintTop_toBottomOf="@id/tvReqTitle"
        android:layout_marginTop="40dp"/>

    <EditText
        android:id="@+id/etReqLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Location / Hospital Name"
        app:layout_constraintTop_toBottomOf="@id/etReqPhone"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/tvLabelGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Blood Group Needed:"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/etReqLocation"
        app:layout_constraintStart_toStartOf="parent"/>

    <Spinner
        android:id="@+id/spinnerReqBloodGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/blood_groups"
        android:minHeight="48dp"
        app:layout_constraintTop_toBottomOf="@id/tvLabelGroup"
        android:layout_marginTop="8dp"/>

    <Button
        android:id="@+id/btnSubmitRequest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send Emergency Alert"
        android:backgroundTint="#D32F2F"
        app:layout_constraintTop_toBottomOf="@id/spinnerReqBloodGroup"
        android:layout_marginTop="30dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>